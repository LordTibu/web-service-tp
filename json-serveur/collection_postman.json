{
  "info": {
    "name": "API Presse JSON Server",
    "_postman_id": "e13f0ef7-15bb-4b91-8000-collection-presse",
    "description": "Tests pour API articles de presse JSON Server (pagination, filtres, commentaires).",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Get all articles",
      "request": {
        "method": "GET",
        "header": [],
        "url": "{{baseUrl}}/articles"
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"Status 200\", () => pm.response.code === 200);",
              "pm.test(\"Response is array\", () => Array.isArray(pm.response.json()));",
              "pm.test(\"Articles have correct fields\", () => {",
              "  pm.response.json().forEach(a => {",
              "    pm.expect(a).to.have.property('title');",
              "    pm.expect(a).to.have.property('image');",
              "    pm.expect(a).to.have.property('content');",
              "    pm.expect(a).to.have.property('date');",
              "    pm.expect(a).to.have.property('tags');",
              "    pm.expect(a).to.have.property('likes');",
              "  });",
              "});"
            ]
          }
        }
      ]
    },

    {
      "name": "Pagination: page 1",
      "request": {
        "method": "GET",
        "url": "{{baseUrl}}/articles?_page=1&_limit=3"
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"Status 200\", () => pm.response.code === 200);",
              "pm.test(\"Returned 3 articles\", () => pm.response.json().length === 3);",
              "pm.test(\"X-Total-Count present\", () => pm.response.headers.has('X-Total-Count'));"
            ]
          }
        }
      ]
    },

    {
      "name": "Filter by tag: culture",
      "request": {
        "method": "GET",
        "url": "{{baseUrl}}/articles?tags_like=culture"
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"Status 200\", () => pm.response.code === 200);",
              "pm.test(\"All returned articles include tag culture\", () => {",
              "  pm.response.json().forEach(a => pm.expect(a.tags).to.include('culture'));",
              "});"
            ]
          }
        }
      ]
    },

    {
      "name": "Get comments of article a1",
      "request": {
        "method": "GET",
        "url": "{{baseUrl}}/comments?articleId=a1"
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"Status 200\", () => pm.response.code === 200);",
              "pm.test(\"All comments belong to article a1\", () => {",
              "  pm.response.json().forEach(c => pm.expect(c.articleId).to.eql('a1'));",
              "});"
            ]
          }
        }
      ]
    },

    {
      "name": "Add comment to article a1",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n    \"articleId\": \"a1\",\n    \"user\": \"Test User\",\n    \"message\": \"Commentaire de test\",\n    \"created_at\": \"{{isoTimestamp}}\"\n}"
        },
        "url": "{{baseUrl}}/comments"
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"Status 201\", () => pm.response.code === 201);",
              "pm.test(\"Comment created\", () => {",
              "  const c = pm.response.json();",
              "  pm.expect(c).to.have.property('id');",
              "  pm.expect(c.articleId).to.eql('a1');",
              "  pm.expect(c.user).to.eql('Test User');",
              "});"
            ]
          }
        }
      ]
    }
  ],
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:4000"
    },
    {
      "key": "isoTimestamp",
      "value": "{{$isoTimestamp}}"
    }
  ]
}
