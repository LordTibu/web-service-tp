{
	"info": {
		"_postman_id": "b8f3e8a9-4b5d-4f1c-8b5e-9b7e3c5d2e1f",
		"name": "Social Media API",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "Authentication",
			"item": [
				{
					"name": "Register User",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"username\": \"testuser\",\n    \"email\": \"test@example.com\",\n    \"password\": \"password123\"\n}"
						},
						"url": {
							"raw": "http://localhost:3000/api/auth/register",
							"protocol": "http",
							"host": ["localhost"],
							"port": "3000",
							"path": ["api", "auth", "register"]
						},
						"description": "Register a new user"
					}
				},
				{
					"name": "Login User",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"email\": \"test@example.com\",\n    \"password\": \"password123\"\n}"
						},
						"url": {
							"raw": "http://localhost:3000/api/auth/login",
							"protocol": "http",
							"host": ["localhost"],
							"port": "3000",
							"path": ["api", "auth", "login"]
						},
						"description": "Login and get JWT token"
					}
				}
			]
		},
		{
			"name": "Posts",
			"item": [
				{
					"name": "Create Post",
					"request": {
						"auth": {
							"type": "bearer",
							"bearer": [
								{
									"key": "token",
									"value": "{{jwt_token}}",
									"type": "string"
								}
							]
						},
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"content\": \"This is my first post!\"\n}"
						},
						"url": {
							"raw": "http://localhost:3000/api/posts",
							"protocol": "http",
							"host": ["localhost"],
							"port": "3000",
							"path": ["api", "posts"]
						},
						"description": "Create a new post"
					}
				},
				{
					"name": "Get All Posts",
					"request": {
						"method": "GET",
						"url": {
							"raw": "http://localhost:3000/api/posts?page=1&limit=10",
							"protocol": "http",
							"host": ["localhost"],
							"port": "3000",
							"path": ["api", "posts"],
							"query": [
								{
									"key": "page",
									"value": "1"
								},
								{
									"key": "limit",
									"value": "10"
								}
							]
						},
						"description": "Get paginated posts"
					}
				},
				{
					"name": "Like/Unlike Post",
					"request": {
						"auth": {
							"type": "bearer",
							"bearer": [
								{
									"key": "token",
									"value": "{{jwt_token}}",
									"type": "string"
								}
							]
						},
						"method": "POST",
						"url": {
							"raw": "http://localhost:3000/api/posts/:postId/like",
							"protocol": "http",
							"host": ["localhost"],
							"port": "3000",
							"path": ["api", "posts", ":postId", "like"],
							"variable": [
								{
									"key": "postId",
									"value": "replace_with_actual_post_id"
								}
							]
						},
						"description": "Like or unlike a post"
					}
				}
			]
		}
	],
	"variable": [
		{
			"key": "jwt_token",
			"value": "your_jwt_token_here"
		}
	]
}