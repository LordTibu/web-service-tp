		{
			"name": "Get post without duplicates",
			"event": [
				{
					"listen": "prerequest",
					"script": {
						"exec": [
							"if (!pm.environment.get('nextCursor')) {",
							"  throw new Error('Missing nextCursor from previous response');",
							"}"
						],
						"type": "text/javascript",
						"packages": {}
					}
				},
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test('Second page returns posts whitout any duplicates with the first page', function () {",
							"  pm.response.to.have.status(200);",
							"  var json = pm.response.json();",
							"  pm.expect(json).to.have.property('posts');",
							"  pm.expect(json.posts).to.be.an('array');",
							"  var firstIds = JSON.parse(pm.environment.get('first_page_post_ids') || '[]');",
							"  var secondIds = json.posts.map(function(p){return p._id;});",
							"  secondIds.forEach(function(id){ pm.expect(firstIds.indexOf(id)).to.eql(-1); });",
							"});"
						],
						"type": "text/javascript",
						"packages": {}
					}
				}
			],
			"request": {
				"auth": {
					"type": "bearer",
					"bearer": [
