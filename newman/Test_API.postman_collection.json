    {
      "name": "Create multiple posts for pagination",
      "event": [
        {
          "listen": "prerequest",
          "script": {
            "exec": [
              "// Prepare unique content for each created post",
              "var currentCount = parseInt(pm.environment.get('create_count') || '0', 10);",
              "var nextCount = currentCount + 1;",
              "var content = 'Post content #' + nextCount + ' - ' + new Date().toISOString();",
              "pm.environment.set('content', content);",
              "pm.environment.set('create_count', String(nextCount));"
            ],
            "type": "text/javascript",
            "packages": {}
          }
        },
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Create multiple post', function () {",
              "  pm.response.to.have.status(201);",
              "  var json = pm.response.json();",
              "  pm.expect(json).to.have.property('_id');",
              "  pm.expect(json).to.have.property('content');",
              "  pm.environment.set('last_post_id', json._id);",
              "});",
              "",
              "// Keep creating posts until we have enough for pagination",
              "var created = parseInt(pm.environment.get('create_count') || '0', 10);",
              "if (created < 3) {",
              "  pm.execution.setNextRequest('Create multiple posts for pagination');",
              "}"
            ],
            "type": "text/javascript",
            "packages": {}
          }
        }
      ],
      "request": {
        "auth": {
          "type": "bearer",
          "bearer": [
            {
              "key": "token",
              "value": "{{jwt_token}}",
              "type": "string"
            }
          ]
        },
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{ \"content\": \"{{content}}\" }"
        },
        "url": {
          "raw": "{{baseUrl}}/api/posts",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "posts"
          ]
        }
      },
      "response": []
    },
    {
      "name": "Get first page of posts",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Get the first page of posts respecting the limit', function () {",
              "  pm.response.to.have.status(200);",
              "  var json = pm.response.json();",
              "  pm.expect(json).to.have.property('posts');",
              "  pm.expect(json.posts).to.be.an('array');",
              "  pm.expect(json).to.have.property('limit');",
              "  pm.expect(json).to.have.property('returned');",
              "  pm.expect(json.returned).to.be.at.most(json.limit);",
              "  pm.environment.set('first_page_post_ids', JSON.stringify(json.posts.map(function(p){return p._id;})));",
              "  if (json.nextCursor) {",
              "    pm.environment.set('nextCursor', json.nextCursor);",
              "  }",
              "});"
            ],
            "type": "text/javascript",
            "packages": {}
          }
        }
      ],
      "request": {
        "auth": {
          "type": "bearer",
          "bearer": [
            {
              "key": "token",
              "value": "{{jwt_token}}",
              "type": "string"
            }
          ]
        },
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/api/posts?limit=2",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "posts"
          ],
          "query": [
            {
              "key": "limit",
              "value": "2"
            }
          ]
        }
      },
      "response": []
    },
    {
      "name": "Get next page without duplicates",
      "event": [
        {
          "listen": "prerequest",
          "script": {
            "exec": [
              "if (!pm.environment.get('nextCursor')) {",
              "  throw new Error('Missing nextCursor from previous response');",
              "}"
            ],
            "type": "text/javascript",
            "packages": {}
          }
        },
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Second page returns posts without duplicates', function () {",
              "  pm.response.to.have.status(200);",
              "  var json = pm.response.json();",
              "  pm.expect(json).to.have.property('posts');",
              "  pm.expect(json.posts).to.be.an('array');",
              "  pm.expect(json).to.have.property('limit');",
              "  pm.expect(json).to.have.property('returned');",
              "  pm.expect(json.returned).to.be.at.most(json.limit);",
              "  var firstIds = JSON.parse(pm.environment.get('first_page_post_ids') || '[]');",
              "  var secondIds = json.posts.map(function(p){return p._id;});",
              "  secondIds.forEach(function(id){ pm.expect(firstIds.indexOf(id)).to.eql(-1); });",
              "});"
            ],
            "type": "text/javascript",
            "packages": {}
          }
        }
      ],
      "request": {
        "auth": {
          "type": "bearer",
          "bearer": [
            {
              "key": "token",
              "value": "{{jwt_token}}",
              "type": "string"
            }
          ]
        },
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/api/posts?limit=2&cursor={{nextCursor}}",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "posts"
          ],
          "query": [
            {
              "key": "limit",
              "value": "2"
            },
            {
              "key": "cursor",
              "value": "{{nextCursor}}"
            }
          ]
        }
      },
      "response": []
    },
    {
      "name": "Create post for likes",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Create a dedicated post for like tests', function () {",
              "  pm.response.to.have.status(201);",
              "  var json = pm.response.json();",
              "  pm.expect(json).to.have.property('_id');",
              "  pm.expect(json).to.have.property('content');",
              "  pm.expect(json).to.have.property('likes');",
              "  var likesCount = Array.isArray(json.likes) ? json.likes.length : 0;",
              "  pm.environment.set('like_post_id', json._id);",
              "  pm.environment.set('previous_like_count', String(likesCount));",
              "});"
            ],
            "type": "text/javascript",
            "packages": {}
          }
        }
