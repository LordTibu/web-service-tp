          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{ \"content\": \"Post used to validate likes toggling\" }"
        },
        "url": {
          "raw": "{{baseUrl}}/api/posts",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
