		{
			"name": "Register",
			"event": [
				{
					"listen": "prerequest",
					"script": {
						"exec": [
							"// Generate credentials ",
							"var salt = Math.floor(Math.random() * 1000000);",
							"pm.environment.set('username', 'testuser_' + salt);",
							"pm.environment.set('email', 'test+' + salt + '@example.com');",
							"pm.environment.set('password', 'Password123!');"
						],
						"type": "text/javascript",
						"packages": {}
					}
				},
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test('Register returns token', function () {",
							"  var json = pm.response.json();",
							"  pm.expect(json).to.have.property('token');",
							"  pm.environment.set('jwt_token', json.token);",
							"});",
							"pm.environment.set('create_count', '0');",
							"pm.environment.unset('nextCursor');",
							"pm.environment.unset('first_page_post_ids');"
						],
						"type": "text/javascript",
						"packages": {}
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n  \"username\": \"{{username}}\",\n  \"email\": \"{{email}}\",\n  \"password\": \"{{password}}\"\n}"
				},
				"url": {
					"raw": "{{baseUrl}}/api/auth/register",
					"host": [
