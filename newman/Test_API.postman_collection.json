    {
      "name": "Like the post",
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "packages": {},
            "exec": [
              "pm.test('Like endpoint adds the current user to likes', function () {",
              "  pm.response.to.have.status(200);",
              "  var json = pm.response.json();",
              "  pm.expect(json).to.have.property('liked');",
              "  pm.expect(json.liked).to.eql(true);",
              "  pm.expect(json).to.have.property('post');",
              "  pm.expect(json.post).to.have.property('likes');",
              "  var previous = parseInt(pm.environment.get('previous_like_count') || '0', 10);",
              "  var likes = Array.isArray(json.post.likes) ? json.post.likes : [];",
              "  pm.expect(likes.length).to.eql(previous + 1);",
              "  pm.environment.set('previous_like_count', String(likes.length));",
              "});"
            ]
          }
        }
      ],
      "request": {
        "auth": {
          "type": "bearer",
          "bearer": [
            {
              "key": "token",
              "value": "{{jwt_token}}",
              "type": "string"
            }
          ]
        },
        "method": "POST",
        "header": [],
        "body": {
          "mode": "raw",
          "raw": ""
        },
        "url": {
          "raw": "{{baseUrl}}/api/posts/{{like_post_id}}/like",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "posts",
            "{{like_post_id}}",
            "like"
          ]
        }
      },
      "response": []
    },
    {
      "name": "Unlike the post",
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "packages": {},
            "exec": [
              "pm.test('Calling like endpoint again removes the like', function () {",
              "  pm.response.to.have.status(200);",
              "  var json = pm.response.json();",
              "  pm.expect(json).to.have.property('liked');",
              "  pm.expect(json.liked).to.eql(false);",
              "  pm.expect(json).to.have.property('post');",
              "  pm.expect(json.post).to.have.property('likes');",
              "  var previous = parseInt(pm.environment.get('previous_like_count') || '0', 10);",
              "  var likes = Array.isArray(json.post.likes) ? json.post.likes : [];",
              "  pm.expect(previous).to.be.above(0);",
              "  pm.expect(likes.length).to.eql(previous - 1);",
              "  pm.environment.set('previous_like_count', String(likes.length));",
              "});"
            ]
          }
        }
      ],
